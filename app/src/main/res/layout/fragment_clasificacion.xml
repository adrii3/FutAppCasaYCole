<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.InicioFragment"
    android:orientation="vertical"
    android:background="@color/blue_A700">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/boton_redondo"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/pelota_futbol" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Clasificacion"
                    android:textColor="@color/blue_A700"
                    android:textSize="30dp"
                    android:textStyle="italic"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/pelota_futbol" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/boton_redondo"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="1. Real Madrid"
                    android:textStyle="italic"
                    android:textColor="@color/blue_A700"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"/>

                <View
                    android:layout_width="20dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shield"
                    android:layout_marginTop="10dp"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="50dp"/>
                <Button
                    android:id="@+id/boton_clasificacion_madrid"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/boton_redondo"
                    android:layout_marginTop="20dp"
                    android:text="Mas info"
                    android:textAlignment="center"
                    android:textColor="@color/blue_A700"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/boton_redondo"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="1. FC Barcelona"
                    android:textStyle="italic"
                    android:textColor="@color/blue_A700"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/barcelona"
                    android:layout_marginTop="10dp"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="50dp"/>
                <Button
                    android:id="@+id/boton_clasificacion_barcelona"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/boton_redondo"
                    android:layout_marginTop="20dp"
                    android:text="Mas info"
                    android:textAlignment="center"
                    android:textColor="@color/blue_A700"
                    android:textSize="15dp"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
